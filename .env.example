# Privacy-First Personal Agent Configuration Template
# Copy this to .env and customize as needed

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
DEFAULT_MODEL=llama3.2:3b

# Privacy Settings
AUTO_DELETE_ENABLED=false
DATA_RETENTION_DAYS_JOURNAL=365
DATA_RETENTION_DAYS_FINANCE=730
DATA_RETENTION_DAYS_DOCUMENTS=180

# Feature Flags
ENABLE_JOURNAL=true
ENABLE_FINANCE=true
ENABLE_DOCUMENTS=true
ENABLE_LLM=true

# Web Interface (if implemented)
WEB_HOST=127.0.0.1
WEB_PORT=5000
WEB_DEBUG=false
SECRET_KEY=change-this-to-random-string

# Logging
LOG_LEVEL=INFO
